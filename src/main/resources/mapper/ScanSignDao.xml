<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lmsltirollcallsjtu.common.dao.ScanSignDao">
	<!--根据主键id查询学生状态-->
	<select id="queryStateByRecordId" resultType="com.lmsltirollcallsjtu.common.bean.bo.UserStateInfo">
		select state,
			   user_name,
			   updated_date
		from   sign_records
		where  rollcall_code=#{rollcallCode} and user_code=#{userCode} and is_valid=1
		order by updated_date asc
	</select>

    <!--扫码之后修改状态为正常-->
    <update id="scanUpdateState" parameterType="com.lmsltirollcallsjtu.common.bean.dto.SignRecordDto">
		update sign_records
			<set>
				<if test="updatedBy!=null and updatedBy!=''">
					updated_by=#{updatedBy},
				</if>
				<if test="state!=null and state!=''">
					state=#{state},
				</if>
				<if test="updatedDate != null">
					updated_date=#{updatedDate},
				</if>
			</set>
		where rollcall_code=#{rollcallCode} and user_code=#{userCode}
	</update>
	<!--查询此次点名的签到总数-->
	<select id="selectAttendancesCount" parameterType="java.lang.String" resultType="java.lang.Integer">
		select attendances_count
		from sign_histories
		where id=#{id}
		order by attendances_count asc
	</select>
	<!--签到总数不断加1-->
	<update id="updateAttendancesCount" parameterType="com.lmsltirollcallsjtu.common.bean.bo.SignHistories">
		update sign_histories
			<set>
				<if test="attendancesCount!=null">
					attendances_count=#{attendancesCount},
				</if>
			</set>
		where id=#{id}
	</update>
</mapper>


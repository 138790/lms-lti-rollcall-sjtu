    <!--根据ID主键查询院系信息-->
    <select id="findAccount" parameterType="java.lang.Long">
        select
            id,
            name,
            parent_account_id,
            workflow_state,
            created_at,
            updated_at,
            deleted_at
        from accounts
        where id=#{id}
    </select>


<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lmsltirollcallsjtu.common.dao.SignHistoriesDao">
    <!--老师查看签到历史-->
	<select id="selectSignHistoryBySectionIds"
			resultType="com.lmsltirollcallsjtu.common.bean.po.SignHistories">
		select class_name,class_size,attendances_count,inserted_at
		from sign_histories
		where section_ids in
		<foreach collection="sectionIds"
				 open="("
				 close=")"
				 separator=","
				 item="sectionId">
			#{sectionId}
		</foreach>
	</select>
</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lmsltirollcallsjtu.common.dao.SignRecordsDao">
    <!--学生查询签到历史列表-->
    <select id="findSignHistoryByUserCodeAndCourseCode"
            parameterType="com.lmsltirollcallsjtu.common.bean.param.SignRecordsOfCourseParam"
			resultType="com.lmsltirollcallsjtu.common.bean.dto.SignRecordsDto">
		select
		r.id,
		r.state,
		r.created_date
		from
		sign_records r
		inner join sign_histories h on h.id=r.rollcall_code
		where
		r.user_code=#{userCode} and h.course_code=#{courseCode}
	</select>
	<!--学生查询某一次签到详情-->
	<select id="findSignConditionByRollcallCode"
			parameterType="com.lmsltirollcallsjtu.common.bean.bo.SignRecordInfo"
			resultType="com.lmsltirollcallsjtu.common.bean.dto.SignRecordsDto">
		 select
		 user_code,
		 state,
		 created_date
		 from
		 sign_records
		 where
		 rollcall_code=#{rollcallCode} and user_code=#{userCode}
	</select>
</mapper>